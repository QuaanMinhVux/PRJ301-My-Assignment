<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.login.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentTimetableController</servlet-name>
        <servlet-class>controller.student.TimetableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentAttendanceController</servlet-name>
        <servlet-class>controller.student.AttendanceController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LectureTimetableController</servlet-name>
        <servlet-class>controller.lecture.LectureTimetableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LectureAttendanceController</servlet-name>
        <servlet-class>controller.lecture.LectureAttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentTimetableController</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentAttendanceController</servlet-name>
        <url-pattern>/student/attendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LectureTimetableController</servlet-name>
        <url-pattern>/lecture/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LectureAttendanceController</servlet-name>
        <url-pattern>/lecture/attendance</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
